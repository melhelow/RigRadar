{
  "name": "RigRadar",
  "forwardPorts": [3000],
  "containerEnv": {
    "DB_HOST": "127.0.0.1",
    "DB_PORT": "5434",
    "DB_USER": "postgres",
    "DB_PASSWORD": "postgres"
  },
  "postCreateCommand": "bash .devcontainer/scripts/pg-init.sh || true",
  "postStartCommand": "bash .devcontainer/scripts/pg-start.sh || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "vortizhe.simple-ruby-erb",
        "mbessey.vscode-rufo",
        "aliariff.vscode-erb-beautify",
        "eamodio.gitlens",
        "setobiralo.erb-commenter",
        "firstdraft.terminal-clear"
      ]
    }
  }
}
