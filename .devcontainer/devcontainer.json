{
  "name": "RigRadar",
  "remoteUser": "vscode",
  "containerEnv": {
    "DB_HOST": "127.0.0.1",
    "DB_PORT": "5433",
    "DB_USER": "postgres",
    "DB_PASSWORD": "postgres"
  },
  "postStartCommand": "bash .devcontainer/scripts/start-user-postgres.sh",
  "forwardPorts": [3000, 5433],
  "portsAttributes": {
    "3000": { "label": "Rails", "visibility": "public" },
    "5433": { "label": "Postgres (local)", "visibility": "private" }
  }
}
