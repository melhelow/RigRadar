<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "RigRadar" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous">

 
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>

   
    <%= javascript_importmap_tags %>

 
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

   
    <%= yield :head %>
  </head>

  <body>
 
    <nav class="navbar navbar-expand-lg navbar-rr">
      <div class="container">
        <%= link_to "RigRadar", root_path, class: "navbar-brand" %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#rrNav"
          aria-controls="rrNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon" style="filter:invert(1);"></span>
        </button>

        <div class="collapse navbar-collapse" id="rrNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if driver_signed_in? %>
              <li class="nav-item"><%= link_to "Loads", loads_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "Truck Stops", truck_stops_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "Rest Areas", rest_areas_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "Weigh Stations", weigh_stations_path, class: "nav-link" %></li>
            <% end %>
          </ul>

          <div class="d-flex gap-2">
            <% if driver_signed_in? %>
              <%= link_to "Account", edit_driver_registration_path, class: "btn btn-sm btn-outline-light" %>
              <%= button_to "Sign out", destroy_driver_session_path, method: :delete,
                    class: "btn btn-sm btn-light" %>
            <% else %>
              <%= link_to "Sign in", new_driver_session_path, class: "btn btn-sm btn-outline-light" %>
              <%= link_to "Get started", new_driver_registration_path, class: "btn btn-sm btn-light" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

   
    <%= yield :hero %>

   
    <div class="container mt-3">
      <% if notice.present? %>
        <div class="alert alert-success card-soft"><%= notice %></div>
      <% end %>
      <% if alert.present? %>
        <div class="alert alert-danger card-soft"><%= alert %></div>
      <% end %>
    </div>

  
    <main class="container py-4">
      <%= yield %>
    </main>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
  </body>
</html>
