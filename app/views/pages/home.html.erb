<% content_for :hero do %>
  <section class="hero py-5">
    <div class="container">
      <div class="row align-items-center g-4">
        <div class="col-lg-7">
          <h1 class="display-5 fw-bold mb-3">Plan smarter routes. Fewer surprises.</h1>
          <p class="lead text-white-50 mb-4">
            RigRadar helps drivers pre-plan rest areas, weigh stations, and vetted truck stops along the corridor between pickup and drop-off.
          </p>
          <% if driver_signed_in? %>
            <%= link_to "Go to Loads", loads_path, class: "btn btn-rr btn-lg me-2" %>
          <% else %>
            <%= link_to "Get Started", new_driver_registration_path, class: "btn btn-rr btn-lg me-2" %>
            <%= link_to "Sign in", new_driver_session_path, class: "btn btn-outline-light btn-lg" %>
          <% end %>
        </div>
        <div class="col-lg-5">
          <div class="card card-soft">
            <div class="card-body">
              <h5 class="fw-semibold mb-2">What you get</h5>
              <ul class="mb-0">
                <li>Corridor-based results (not noisy “nearby” lists)</li>
                <li>Filter by provider + truck parking</li>
                <li>Saved stops render on your route map</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

<div class="row g-3 mt-3">
  <div class="col-md-4">
    <div class="card card-soft h-100">
      <div class="card-body">
        <h5 class="fw-semibold">Pre-plan</h5>
        <p class="text-muted mb-2">Select rest areas & truck stops with filters; weigh stations listed automatically.</p>
        <%= link_to "Open Loads", loads_path, class: "btn btn-outline-primary btn-sm" %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card card-soft h-100">
      <div class="card-body">
        <h5 class="fw-semibold">See it on the map</h5>
        <p class="text-muted mb-2">Pickup to drop-off line with your saved stops rendered in color.</p>
        <% if driver_signed_in? %>
          <%= link_to "View a Load", loads_path, class: "btn btn-outline-primary btn-sm" %>
        <% else %>
          <%= link_to "Sign in", new_driver_session_path, class: "btn btn-outline-primary btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card card-soft h-100">
      <div class="card-body">
        <h5 class="fw-semibold">Save time</h5>
        <p class="text-muted mb-2">Faster pre-trip planning and fewer off-corridor detours.</p>
        <%= link_to "Create account", new_driver_registration_path, class: "btn btn-outline-primary btn-sm" %>
      </div>
    </div>
  </div>
</div>
