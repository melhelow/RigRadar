<h1><%= @truck_stop.name %></h1>

<p>
  <% if @truck_stop.provider.present? %>
    <strong>Provider:</strong> <%= @truck_stop.provider %><br>
  <% end %>
  <strong>Address:</strong>
  <%= [@truck_stop.street, @truck_stop.city, @truck_stop.state, @truck_stop.zip_code].compact.join(", ") %><br>
  <% if @truck_stop.phone.present? %>
    <strong>Phone:</strong> <%= @truck_stop.phone %><br>
  <% end %>
  <% if @truck_stop.opening_hours.present? %>
    <strong>Hours:</strong> <%= @truck_stop.opening_hours %><br>
  <% end %>
  <% if @truck_stop.parking_truck.present? %>
    <strong>Truck parking:</strong> <%= @truck_stop.parking_truck %><br>
  <% end %>
  <strong>Coordinates:</strong> <%= @truck_stop.latitude %>, <%= @truck_stop.longitude %><br>
  <% if @truck_stop.website.present? %>
    <a href="<%= @truck_stop.website %>" target="_blank" rel="noopener">Website</a> â€¢
  <% end %>
  <% if @truck_stop.direction_url.present? %>
    <a href="<%= @truck_stop.direction_url %>" target="_blank" rel="noopener">Directions</a>
  <% end %>
</p>

<p><%= link_to "Back", truck_stops_path %></p>
