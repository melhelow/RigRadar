<h1 class="mb-3">Weigh Stations</h1>

<div class="card card-soft mb-3">
  <div class="card-body">
    <%= form_with url: weigh_stations_path, method: :get, local: true do %>
      <div class="row g-3 align-items-end">
        <div class="col-sm-6">
          <%= label_tag :q, "Filter (state or name)", class: "form-label" %>
          <%= text_field_tag :q, params[:q], placeholder: "e.g. MO or 'Cottonwood'", class: "form-control" %>
        </div>
        <div class="col-auto">
          <%= submit_tag "Search", class: "btn btn-rr" %>
          <% if params[:q].present? %>
            <%= link_to "Clear", weigh_stations_path, class: "btn btn-link" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="list-group">
  <% @weigh_stations.each do |weigh_station| %>
    <div class="list-group-item">
      <strong><%= link_to (weigh_station.name.presence || "Weigh Station"), weigh_station_path(weigh_station) %></strong>
      <div class="small text-muted">
        — <%= weigh_station.state %>
        <% if weigh_station.respond_to?(:functional) && weigh_station.functional.present? %>
          • <%= weigh_station.functional %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
