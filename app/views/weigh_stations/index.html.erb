<h1>Weigh Stations</h1>

<%= form_with url: weigh_stations_path, method: :get, local: true do %>
  <label>Filter (state or name):</label>
  <%= text_field_tag :q, @q, placeholder: "e.g. IL or TRUCK SCALE" %>
  <%= submit_tag "Search" %>
  <% if @q.present? %>
    <%= link_to "Clear", weigh_stations_path %>
  <% end %>
<% end %>

<ul>
  <% @weigh_stations.each do |w| %>
    <li>
      <%= link_to (w.name.presence || "Weigh Station"), weigh_station_path(w) %>
      <small> â€” <%= w.state %></small>
    </li>
  <% end %>
</ul>

