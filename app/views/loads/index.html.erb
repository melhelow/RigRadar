
<h1>Your Loads</h1>
<p><%= link_to "New Load", new_load_path %></p>

<ul>
  <% @loads.each do |load| %>
    <li>
      <%= link_to "Load ##{load.id} - #{load.commodity}", load %> (<%= load.status %>)
      — <%= link_to "Edit pre-plan", preplan_load_path(load), class: "btn btn-secondary" %>
      <%= link_to "Planned route", load_path(load, anchor: "map"), class: "btn" %>
      — <%= button_to "Delete", load_path(load), method: :delete, form: { style: "display:inline" },
            data: { turbo_confirm: "Delete Load ##{load.id}?" } %>
    </li>
  <% end %>
</ul>
