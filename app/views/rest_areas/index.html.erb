<h1 class="mb-3">Rest Areas</h1>

<div class="card card-soft mb-3">
  <div class="card-body">
    <%= form_with url: rest_areas_path, method: :get, local: true do %>
      <div class="row g-3 align-items-end">
        <div class="col-sm-6">
          <%= label_tag :q, "Filter (state or route)", class: "form-label" %>
          <%= text_field_tag :q, @q, placeholder: "e.g. IL or I-80", class: "form-control" %>
        </div>
        <div class="col-auto">
          <%= submit_tag "Search", class: "btn btn-rr" %>
          <% if @q.present? %>
            <%= link_to "Clear", rest_areas_path, class: "btn btn-link" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="list-group">
  <% @rest_areas.each do |rest_area| %>
    <div class="list-group-item">
      <strong><%= link_to (rest_area.name.presence || "Rest Area"), rest_area_path(rest_area) %></strong>
      <div class="small text-muted">
        â€” <%= rest_area.state %> <%= rest_area.highway_route %>
        <% if rest_area.mile_post.present? %> MP <%= rest_area.mile_post %><% end %>
        <% if rest_area.number_of_spots.present? %>  Spots: <%= rest_area.number_of_spots %><% end %>
      </div>
    </div>
  <% end %>
</div>
